{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["es2015", "dom"],
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./types",
    // "outDir": "./lib"
  },
  "include": [
    "src/lib/**/*.ts",
    // "src/lib/momentum-ui-angularjs.ts"
  ],
  "types": ["node"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "../node_modules"
  ]
}
